<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="container" prefHeight="650.0" prefWidth="900.0" styleClass="container" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.cserny.videos.mover.ui.controller.MainController">
   <center>
   
          <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="middle-table-pane" BorderPane.alignment="CENTER">
           <TableView fx:id="tableView" />
       </ScrollPane>
   </center>
   <top>
      <BorderPane prefHeight="100.0" prefWidth="900.0" styleClass="top-container" BorderPane.alignment="CENTER">
         <left>
              <HBox alignment="CENTER" prefHeight="75.0" prefWidth="500.0" styleClass="downloads-path-container">
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#setDownloadsPath" prefHeight="30.0" prefWidth="140.0" styleClass="default-button, downloads-button" text="Downloads" />
                  <TextField fx:id="downloadsPathTextField" disable="true" prefHeight="30.0" prefWidth="300.0" styleClass="downloads-text" />
              </HBox>
         </left>
         <right>
      
                 <HBox alignment="CENTER" prefHeight="75.0" prefWidth="300.0" styleClass="scan-container" BorderPane.alignment="CENTER">
                  <Button alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#loadTableView" prefHeight="60.0" prefWidth="250.0" styleClass="scan-button" text="Search Downloads" textAlignment="CENTER">
                  <graphic>
                      <ImageView fx:id="loadingImage" fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="@../images/scan-button.png" />
                          </image>
                      </ImageView>
                  </graphic>
               </Button>
              </HBox>
         </right>
      </BorderPane>
   </top>
   <bottom>
      <BorderPane prefHeight="100.0" prefWidth="800.0" styleClass="bottom-container" BorderPane.alignment="CENTER">
         <left>
      
                 <VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" styleClass="paths-container" BorderPane.alignment="CENTER">
                  <HBox alignment="CENTER" styleClass="movie-path-container">
                      <Button mnemonicParsing="false" onAction="#setMoviePath" prefHeight="30.0" prefWidth="140.0" styleClass="default-button, movies-button" text="Movies" />
                      <TextField fx:id="moviePathTextField" disable="true" prefHeight="30.0" prefWidth="300.0" styleClass="movies-text" />
                  </HBox>
      
                     <HBox alignment="CENTER" styleClass="tv-path-container">
                      <Button mnemonicParsing="false" onAction="#setTvShowPath" prefHeight="30.0" prefWidth="140.0" styleClass="default-button, tv-button" text="TV Shows" />
                      <TextField fx:id="tvShowPathTextField" disable="true" prefHeight="30.0" prefWidth="300.0" styleClass="tv-text" />
                  </HBox>
              </VBox>
         </left>
         <right>
      
                 <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0" styleClass="move-container" BorderPane.alignment="CENTER">
                  <Button mnemonicParsing="false" onAction="#moveVideos" prefHeight="60.0" prefWidth="250.0" styleClass="default-button, move-button" text="Move Selected Files" />
              </HBox>
         </right>
      </BorderPane>
   </bottom>
</BorderPane>
